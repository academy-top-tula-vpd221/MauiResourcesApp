<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiResourcesApp.CssPage"
             Title="CssPage">
    <ContentPage.Resources>
        <StyleSheet Source="MyResources/styles.css"/>
    </ContentPage.Resources>

    <StackLayout>
        <Label StyleId="title" Text="Hello world"/>
        <Label Text="Hello people"/>
        <Label StyleClass="redText" Text="Hello all"/>
        <Button Text="Button"/>
    </StackLayout>
</ContentPage>